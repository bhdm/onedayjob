{% extends 'base.html.twig' %}

{% block userblock %}
    <div class="account-main" id="sel">
      <nav class="account-nav worker-nav">
        
        {% include '_menu_mobile.html.twig' %}
        
        <div class="account-drop-menu collapse" id="navcollaps">
          
          {% include 'employee_profile_menu.html.twig' %}
          
        </div>
      </nav>
      <div class="account-heading">
        <div class="pull-right xs-hide"> <span class="h3">{{ 'user.profile.balance'|trans }}: <b class="text-warning">{{ app.user.balance }} {{ 'rub'|trans }}</b></span> </div>
        <div class="account-title"> <span class="xs-show"><i class="icon-16 icon-briefcase-white"></i></span>
          <h3>{{ 'user.menu.management'|trans }}</h3>
        </div>
      </div>
    </div>
    <div class="account-content">
      <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-6">
          <div class="border-right-form border-right-offset-y">

            {% include '_flash_messages.html.twig' %}
            
            {{ form_start(resume_up_form) }}
              <div class="form-group"> <i class="pull-left icn icn-4"></i>
                <div class="form-pad-left">
                  <label class="text-bold text-uppercase">{{ 'user.management.resume_top'|trans }}</label>
                  <div class="top-xs">
                    <button type="submit" class="button button-sm">{{ 'user.management.pay'|trans }}</button>
                    <b class="text-warning price">100 {{ 'rub'|trans }}</b></div>
                </div>
                <div class="clearfix"></div>
              </div>

              <div style="display:none;">
                {{ form_widget(resume_up_form.resume) }}
              </div>
            {{ form_end(resume_up_form) }}

              <div class="space"></div>

