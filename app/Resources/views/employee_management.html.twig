                  <label class="text-bold text-uppercase">Разместить резюму в срочное{{ 'user.management.pay'|trans }}</label>
                  <div class="row">
                    <div class="col-sm-7 col-md-6">
                      {{ form_widget(resume_vip_form.resume, {'attr': {'class':'form-control'}}) }}
                    </div>
                  </div>
                  <div class="button-group">
                    <button type="submit" class="button button-sm">Оплатить</button>
