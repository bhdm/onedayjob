          -->
            

          </div>
        </div>
        <div class="col-xs-12 col-sm-5 col-md-6">
          <div class="top-xs margin-top-xs payform">
            <form>
              <div class="form-group">
                <label for="" class="text-bold text-uppercase">{{ 'user.management.balance'|trans }}</label>
                <div class="row">
                  <div class="col-sm-4">
                    <input type="text" class="form-control" id="" value="100 {{ 'rub'|trans }}">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="text-bold text-uppercase">{{ 'user.management.pay_system'|trans }}</div>
                <div class="top-sm">
                  <label class="pay-select">
                    <input type="radio" value="1" name="pay" checked>
                    <span class="pay-img"> <i class="pay-icn ya"></i> </span> </label>
                  <label class="pay-select">
                    <input type="radio" value="2" name="pay">
                    <span class="pay-img"> <i class="pay-icn visa"></i> </span> </label>
                  <label class="pay-select">
                    <input type="radio" value="3" name="pay">
                    <span class="pay-img"> <i class="pay-icn mc"></i> </span> </label>
                  <label class="pay-select">
                    <input type="radio" value="4" name="pay">
                    <span class="pay-img"> <i class="pay-icn wm"></i> </span> </label>
                </div>
              </div>
              <button type="submit" class="button button-invert">{{ 'user.management.balance'|trans }}</button>
            </form>
          </div>
        </div>
      </div>
    </div>
{% endblock %}