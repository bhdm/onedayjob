{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
	<div class="greenLine"></div>
	<div class="container">
		<div class="row">
			<div class="col-sm-offset-3 col-sm-6">

				<div class="registration">
					<h2>Войти в аккаунт</h2>
					<div class="socBnts top">
						{% if error %}
							<div class="alert alert-danger alert-dismissible" role="alert">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						{% endif %}

						<script src="//ulogin.ru/js/ulogin.js"></script>
						<div id="uLoginba48b1bd" data-ulogin="display=buttons;fields=first_name,last_name,nickname,sex,bdate,email,photo,photo_big;optional=phone,city,country;providers=vkontakte,odnoklassniki,mailru,facebook;hidden=twitter,google,yandex,livejournal,openid,lastfm,linkedin,liveid,soundcloud,steam,flickr,uid,youtube,webmoney,foursquare,tumblr,googleplus,dudu,vimeo,instagram,wargaming;redirect_uri={{ 'http://' ~ app.request.host }}/ru/social">
							<ul>
								<li class="ic1"><a data-uloginbutton="vkontakte"></a></li>
								<li class="ic2"><a data-uloginbutton="twitter"></a></li>
								<li class="ic3"><a data-uloginbutton="instagram"></a></li>
								<li class="ic4"><a data-uloginbutton="odnoklassniki"></a></li>
								<li class="ic5"><a data-uloginbutton="facebook"></a></li>
							</ul>
						</div>

						<script>uLogin.customInit('{{ "ba48b1bd" ~ '_' ~ random() }}');</script>
					</div>
					<form action="{{ path("fos_user_security_check") }}" method="post">
						<div class="divider"></div>
						<label class="labelInput" for="username">{{ 'security.form.label.username'|trans }}</label>
						<input class="input" placeholder="Введите e-mail" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
						<label class="labelInput" for="password">{{ 'security.form.label.password'|trans }}</label>
						<input class="input" placeholder="Введите пароль" type="password" id="password" name="_password" required="required" />

						<div class="btnLine">
							<input class="greenBtn" type="submit" id="_submit" name="_submit" value="{{ 'security.form.submit'|trans }}" />
						</div>
						<div class="forgotPass">
							<a href="{{ path('fos_user_resetting_request') }}">{{ 'security.resetting'|trans }}</a>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock fos_user_content %}