<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>{% block title %}{{ 'site_title'|trans }}{% endblock %}</title>


    <link href="{{ asset('/bundles/onedayjobfrontend/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('/css/2eca46c_part_1_5_style_6.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('/css/2eca46c_part_1_8_style_open_resume_9.css') }}" type="text/css" rel="stylesheet">

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
        {% javascripts 'bundles/onedayjobfrontend/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <![endif]-->
    {% endblock %}
    <script type="text/javascript" src="{{ asset("/js/258ecd2_part_1_8_new_9.js") }}"></script>

    <script type="text/javascript" src="{{ asset("bundles/onedayjobfrontend/fancyapps/source/jquery.fancybox.js") }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/onedayjobfrontend/fancyapps/lib/jquery.mousewheel-3.0.6.pack.js") }}"></script>
    <link rel="stylesheet" href="{{ asset("bundles/onedayjobfrontend/fancyapps/source/jquery.fancybox.css") }}" type="text/css" media="screen" />

</head>
<body  data-locale="{{ app.request.get('_locale') }}">
<header>
    <div class="container-fluid" id="header">
        <div class="raw">
            <div id="header_logo" class="col-sm-1"><img src="{{ asset("bundles/onedayjobfrontend/images/new/logo.png") }}"> </div>
            <div class="col-sm-6 header-new-resume">
                <form method="post">
                    <div class="col-sm-2 header-form-select">
                        <select name="applicants-label">
                            <option class="header-form-option" value="1">СОИСКАТЕЛИ</option>
                            <option class="header-form-option" value="2">ВАКАНСИИ</option>
                            <option class="header-form-option" value="3">КОМПАНИИ</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <input id="header-input" type="text" class="form-control" placeholder="КЛЮЧЕВОЕ СЛОВО">
                    </div>
                    <div class="col-sm-3" id="header-form-calendar-div">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-sm-1" id="header-form-button-div">
                        <button type="submit" class="btn btn-primary btn-lg header-form-button">{{ 'form.search.search'|trans }}</button>
                    </div>
                </form>
            </div>

            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div id="header_name_or_registration" class="col-sm-3 "> {{ app.user.firstName ~ ' ' ~ app.user.lastName }}
                    <a href="{{ path('fos_user_security_logout') }}">
                        <span id="header_login_logout">{{ 'menu.logout'|trans }}</span>
                    </a>
                </div>
            {% else %}
                <div id="header_name_or_registration" class="col-sm-3 ">
                    <a href="{{ path('fos_user_registration_register') }}">
                        <span>{{ 'menu.registration'|trans }}</span>
                    </a>
                    <div id="header_login_logout">{{ 'menu.login'|trans }}</div>
                </div>
            {% endif %}
        </div>
    </div>
</header>


<div class="container">
    <div class="row resume-open-top">
        <div class="col-sm-1">
            <span><img src="{{ asset("bundles/onedayjobfrontend/images/new/arrow-left.png") }}"> назад</span>
        </div>
        <div class="col-sm-3">
            <span class="resume-open-top-text">РЕЗУЛЬТАТЫ ПОИСКА</span>
        </div>
        <div class="col-sm-3">
            <span class="resume-open-top-text">СРОЧНЫЕ ВАКАНСИИ</span>
        </div>
        <div class="col-sm-2">
            <span class="resume-open-top-text">КОМПАНИИ</span>
        </div>
        <div class="col-sm-2">
            <span class="resume-open-top-text">СОИСКАТЕЛЬ</span>
        </div>
    </div>

    <div class="row">
        <div class="container-fluid resume-data">
            <div class="row">
                <div class="col-sm-4 resume-open-img">
                    <img src="{{ resume.imageSrc }}" alt="">
                </div>
                <div class="col-sm-8 resume-main-data">
                    <div class="resume-open-fullname">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/man.png") }}">
                        <span>{{ resume.fullName | upper}}</span>
                        <div class="resume-open-add-to-favorites">
                            <span>Добавить в избранное</span>
                            <img src="{{ asset("bundles/onedayjobfrontend/images/new/star.png") }}"> </div>
                    </div>
                    <div class="resume-open-locale">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/locale.png") }}">
                        <span>{{ resume.city.translate.title }}</span>
                    </div>
                    <div class="resume-open-age">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/sand_watch.png") }}">
                        <span>{{ resume.age }}</span>
                    </div>
                    <div class="resume-open-sex">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/sex.png") }}">
                        <span>{{ resume.sex }}</span>
                    </div>
                    <div class="resume-open-phone">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/phone.png") }}">
                        <span>{{ resume.phone }}</span>
                    </div>
                    <div class="resume-open-email">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/email.png") }}">
                        <span>{{ resume.email }}</span>
                    </div>
                    <div class="resume-open-skype">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/skype.png") }}">
                        <span>{{ resume.skype }}</span>
                    </div>
                    <div class="resume-open-specialization">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/specialization.png") }}">
                        <span>{{ resume.specialty | upper}}</span>
                    </div>
                    <div class="resume-open-term">
                        <table>
                            <tr>
                                <td><img class="resume-open-term-img" src="{{ asset("bundles/onedayjobfrontend/images/new/calendar.png") }}"></td>
                                <td><span class="resume-open-term-project">Срок проекта <br> <span class="resume-open-term-date">{{ resume.termfrom |date("d/m/Y") }} - {{ resume.termto |date("d/m/Y") }}</span></span></td>
                            </tr>
                        </table>
                    </div>
                    <div class="resume-open-salary">
                        <img src="{{ asset("bundles/onedayjobfrontend/images/new/rub.png") }}">
                        <span>{{ resume.salary|number_format(0) }} {{ helper.currency(resume.currency) }}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 resume-open-education">
                    <h4 class="resume-open-headline"><img src="{{ asset("bundles/onedayjobfrontend/images/new/education.png") }}">{{ 'form.vacancy.education'| trans | upper}}</h4>
                    <p>
                        {% for education in resume.education %}
                            {{ education.title }}
                        {% endfor %}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 resume-open-experience">
                    <h4 class="resume-open-headline"><img src="{{ asset("bundles/onedayjobfrontend/images/new/work_experience.png") }}">{{ 'form.vacancy.work_experience'| trans | upper}}</h4>
                    <p>
                        {% for experience in resume.experience %}
                            {{ experience.title }}
                        {% endfor %}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 resume-open-extra">
                    <h4 class="resume-open-headline"><img src="{{ asset("bundles/onedayjobfrontend/images/new/skills.png") }}">КАЧЕСТВА, НАВЫКИ</h4>
                    <p>
                        {{resume.extra}}
                    </p>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-primary btn-lg resume-open-respond"> ОТКЛИКНУТЬСЯ </button>
            </div>
        </div>
    </div>

    <div class="resume-open-similar">
        <h2>ПОХОЖИЕ СОИСКАТЕЛИ</h2>
        {{ render(controller('OneDayJobFrontendBundle:Resume:similarResume', {'id': resume.id})) }}
    </div>

</div>

<footer>
    <div class="container-fluid" id="footer">
        <div class="row footer-link">
            <div class="col-lg-4 col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3 col-lg-offset-4">
                <div class="row">
                    <div class="col-sm-2 col-sm-offset-1 footer-links"><a href="#"> О нас </a></div>
                    <div class="col-sm-2 footer-links"><a href="#"> Партнеры </a></div>
                    <div class="col-sm-2 footer-links"><a href="#"> Компании </a></div>
                    <div class="col-sm-2 footer-links"><a href="#"> Помощь </a></div>
                    <div class="col-sm-2 footer-links"><a href="#"> Вопросы </a></div>
                </div>
            </div>
        </div>

        <div class="row footer-social-networks-label">
            <div class="col-sm-4 col-sm-offset-4">
                <h3>Мы в соц.сетях</h3>
            </div>
        </div>

        <div class="row row footer-social-networks">
            <div class="col-sm-4 col-sm-offset-4">
                <a href="#"><img src="{{ asset("bundles/onedayjobfrontend/images/new/vk.png") }}"></a>
                <a href="#"><img src="{{ asset("bundles/onedayjobfrontend/images/new/facebook.png") }}"></a>
                <a href="#"><img src="{{ asset("bundles/onedayjobfrontend/images/new/twitter.png") }}"></a>
                <a href="#"><img src="{{ asset("bundles/onedayjobfrontend/images/new/ok.png") }}"></a>
                <a href="#"><img src="{{ asset("bundles/onedayjobfrontend/images/new/g_plus.png") }}"></a>
                <a href="#"><img src="{{ asset("bundles/onedayjobfrontend/images/new/a.png") }}"></a>
            </div>
        </div>

        <div class="row footer-logo">
            <div class="col-lg-2 col-lg-offset-5 col-md-4 col-md-offset-4 ">
                <img src="{{ asset("bundles/onedayjobfrontend/images/new/footer-logo1.png") }}">
                <img src="{{ asset("bundles/onedayjobfrontend/images/new/footer-logo2.png") }}"><br/><br/>
                <img src="{{ asset("bundles/onedayjobfrontend/images/new/footer-logo3.png") }}">
            </div>
        </div>
    </div>
</footer>
</body>
</html>